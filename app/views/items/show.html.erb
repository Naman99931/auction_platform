<h3>Title : <%= @item.title %></h3>
<%= image_tag @item.images.variant(:thumb) %>
<br>
Description : <%= @item.item_description %>
<br>
Reserved Price : <%= @item.reserved_price %>
<br>
<% if @current_price.present? %>
    Current Price : <%= @item.current_price %>
<br>
<% end %>
Start Time : <%= @item.start_time %>
<br>
End Time : <%= @item.end_time %>
<br>


<% if @item.winner_id.present? %>
<% winner = User.find(winner_id) %>
<h4> Winner name : <%= winner.firstname %> </h4>
 <% bid = @item.bids.last %>
<h4> Bought on : <%= bid.amount %>
<% end %>

<% if current_user.role == "seller" %>
<%= link_to "Edit this item", edit_user_item_path(@item.id)%>
<%= link_to "Delete this item", item_path(@item.id) %>
<% end %>

<% if current_user.role == "admin" %>
  <%= button_to "Delete", item_path(@item.id), method: :delete, class: "btn btn-danger" %>
<% end %> 