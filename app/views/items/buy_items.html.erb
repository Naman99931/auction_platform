<% @items.each do|f| %>
  <% if f.payment_status == "pending" %>
      <p><%= "You are the winner of the action of #{f.title}, on the price of #{f.current_price}, please do the payment from the given link"%></p>
      <%= button_to "Pay Now", payments_create_path, params: {id: f.id}, remote: true %>
  <% end %>
<% end %>
