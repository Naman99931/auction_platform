<h1> Upcoming Auctions </h1>

<%= @items
          .where("start_time > ?", Time.current)
          .each do |form| %>
  
 <h5> Title : <%= form.title %> </h5>

  <%= image_tag form.images.variant(:thumb) %>
  <br> 
 Item Description : <%= form.item_description %>
  <br>
  Base Price : <%=form.reserved_price %>
  <br>
  Starting on : <%= form.start_time %>
  <br>
  Ends on : <%=form.end_time %> 
  <br>

  
<%  end %>