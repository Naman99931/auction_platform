<h3>Item Details</h3>
  <h4>Title : <%= @item.title %> </h4>
  <%= image_tag @item.images.variant(:thumb) %>
  <br>
  Item Description : <%= @item.item_description %>
  <br>
  Reserved Price : <%= @item.reserved_price %>
  <br>
  Started on : <%= @item.start_time %>
  <br>    
  Ends in : <%= (@item.end_time - Time.current).to_i %> seconds
  <br>
  <br>
  <% if current_user.role == "bidder" %>
  <%= link_to "Place your Bid", new_item_bid_path(@item) %>
  <%end %>

  <h6>Comments : </h6>
  <%= link_to "Add Your Comment", new_item_comment_path(@item) %>
  <% if @item.comments.present? %>
    <% @item.comments.each do |comment| %>
        <% user = User.find(comment.user_id) %>
        <p>Name : <%=user.firstname%><%=user.lastname%></p>
        <p><%= comment.content %> </p> 
        <% if current_user.role == "seller" || current_user.role == "admin" %>

          <%= button_to "Delete", item_comment_path(@item, comment.id), method: :delete, remote: true, class: "btn btn-danger" %>

        <% end %>
        <br>
    <%end%>
      
  <% else %>
      <p>No comments yet...</p>
  <% end %>
  
        
  
<h4>All Bids</h4>
<% if current_user.role == "bidder" %>
  <%= link_to "Place your Bid", new_item_bid_path(@item) %>
<%end %>


<% if @item.bids.present? %>
    <% @bids = @item.bids.order(amount: :desc) %>
    <% @bids.each do |f| %>
      <h5>Amount : <%= f.amount %> </h5>
      Created at : <%= f.created_at %>
      <br>
      <% user = User.find(f.user_id) %>
      Bidder name : <%= user.firstname %><%=user.lastname %>
      <br>
    <%end %>
<% else %>
    <p>No bid yet...</p>
<% end %>

         

