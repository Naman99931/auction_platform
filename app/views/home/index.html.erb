<section class="vh-100 bg-image"
  style="background-image: url('https://dinarys.com/storage/images/blogs/1BSuiff2cs0YpcWmC1UTDjjGe6MVDOxN4xwflAUV.jpeg');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Auction Platform</h2>

              <form>
                <div class = "text-center mb3">
                <div data-mdb-input-init class="form-outline mb-4">
                  <h4><%= link_to "Sign In", new_user_session_path %></h4>
                </div>

                <div data-mdb-input-init class="form-outline mb-4">
                  <h4><%= link_to "Dont have an account? Sign Up", new_user_registration_path %></h4>
                  </div>

                <div data-mdb-input-init class="form-outline mb-4">
                  <h4><%= link_to "Sign Up as an admin", new_user_registration_path(role: "admin") %></h4>
                </div>
                </div>

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
